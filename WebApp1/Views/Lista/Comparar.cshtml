<script>
    function showList(contador) {
        var teste = document.getElementById("mostrarLista " + contador).value;
        if (teste == "Mostrar Lista") {
            var element = document.getElementById("mostrarLista " + contador);
            element.value = "Fechar Lista";
            $('#lista_' + contador).show();
        }
        else {
            var element = document.getElementById("mostrarLista " + contador);
            element.value = "Mostrar Lista";
            $('#lista_' + contador).hide();
        }
    }
</script>
