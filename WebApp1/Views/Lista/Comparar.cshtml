@model WebApp.Models.ComparadorMercadosViewModels
@{int contador = 0;}

<div class="top-brands">
    <div class="container">
        <h2>MENOR PREÇO</h2>
        <div class="grid_3 grid_5">
            <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                <div id="myTabContent" class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="expeditions" aria-labelledby="expeditions-tab">
                        <div class="agile_top_brands_grids">
                            <div class="col-md-4 top_brand_left">
                                <form>
                                    @foreach (WebApp.Models.MercadoViewModels mercado in Model.MercadosMenorPreco)
                                    {
                                        contador++;
                                        <div id="listaItens" style="display:none" class="col-md-8">

                                        </div>
                                        <br />
                                        <div class="hover14 column">
                                            <div class="agile_top_brand_left_grid">
                                                <div class="agile_top_brand_left_grid_pos">
                                                    <img src="images/offer.png" alt=" " class="img-responsive">
                                                </div>
                                                <div class="agile_top_brand_left_grid1">
                                                    <figure>
                                                        <div class="snipcart-item block">
                                                            <div class="snipcart-thumb">
                                                                <a href="products.html"><img style="height:120px; width:120px" src="data:image/jpeg;base64,@mercado.SuperMercado.Logo" /></a>
                                                                <p>@mercado.SuperMercado.Nome</p>
                                                                <p>A @mercado.Proximidade KMs de você</p>
                                                                <p>Preço final</p>
                                                                <p>R$@mercado.PrecoFinal</p>
                                                            </div>
                                                        </div>
                                                        <button onclick="showList(@contador)" name="mostrarLista" id="mostrarLista @contador" type="button" value="Mostrar Lista" class="snipcart-details top_brand_home_details" style="position:center; font-size: 14px; color: #fff; background: #3399cc; margin:20px; text-decoration: none; border: none; border-radius: 0; text-transform: uppercase; padding: 5px; outline: none">Lista</button>
                                                        <div id="lista_@contador" name="lista @contador" style="display:none">
                                                            @foreach (DTO.Item item in mercado.Itens)
                                                            {
                                                                <p id="lista">@item.quantity x @item.item_name R$@item.amount</p>
                                                            }
                                                        </div>
                                                    </figure>
                                                </div>
                                            </div>
                                        </div>
                                        <br />
                                    }
                                </form>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                </div>
            </div>
